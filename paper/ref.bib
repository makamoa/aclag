@Article{C9EE02766A,
  author    = {Liu, Bin and Feng, Shijia and Yang, Lifei and Li, Chengcheng and Luo, Zhibin and Wang, Tuo and Gong, Jinlong},
  title     = {Bifacial passivation of n-silicon metal–insulator–semiconductor photoelectrodes for efficient oxygen and hydrogen evolution reactions},
