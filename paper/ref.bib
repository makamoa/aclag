@article{Labelle2017,
  title = {Broadband {{Epsilon}}-near-{{Zero Reflectors Enhance}} the {{Quantum Efficiency}} of {{Thin Solar Cells}} at {{Visible}} and {{Infrared Wavelengths}}},
  author = {Labelle, A. J. and Bonifazi, M. and Tian, Y. and Wong, C. and Hoogland, S. and Favraud, G. and Walters, G. and Sutherland, B. and Liu, M. and Li, Jun and Zhang, Xixiang and Kelley, S. O. and Sargent, E. H. and Fratalocchi, A.},
  date = {2017-02-15},
  journaltitle = {ACS Applied Materials \& Interfaces},
