@Article{C5AN02057C,
  author    = {Jahn, Martin and Patze, Sophie and Hidi, Izabella J. and Knipper, Richard and Radu, Andreea I. and Mühlig, Anna and Yüksel, Sezin and Peksa, Vlastimil and Weber, Karina and Mayerhöfer, Thomas and Cialla-May, Dana and Popp, Jürgen},
